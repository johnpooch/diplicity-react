{
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(cut:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(python3:*)",
      "Bash(sort:*)",
      "Bash(tail:*)",
      "Bash(tr:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Read(~/.claude/*)",
      "Skill(react)",
      "mcp__XcodeBuildMCP"
    ],
    "deny": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f packages/web/package.json ]; then cd packages/web && npm run lint --silent 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  }
}