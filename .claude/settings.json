{
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(git:*)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Bash(python3:*)",
      "Skill(react)"
    ],
    "deny": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f packages/web/package.json ]; then cd packages/web && npm run lint --silent 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  }
}